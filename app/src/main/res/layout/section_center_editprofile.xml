<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.jackandphantom.circularimageview.CircleImage
                android:id="@+id/profile_photo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_16"
                android:src="@drawable/profile"
                app:border_color="@color/black"
                app:border_width="1dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/changeProfilePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_photo"
                android:layout_centerHorizontal="true"
                android:text="@string/Change_photo"
                android:textColor="@color/blue_400"
                android:textSize="@dimen/size_txt_20"
                android:textStyle="bold" />


            <!--display name section-->
            <RelativeLayout
                android:id="@+id/relLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changeProfilePhoto"
                android:background="@color/white"
                android:padding="@dimen/padding_20">

                <RelativeLayout
                    android:id="@+id/relLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/nameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/Name"
                        android:textSize="@dimen/size_txt_14" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/nameText"
                        android:inputType="text"
                        android:layout_marginTop="3dp"
                        android:hint="@string/Name"
                        android:textSize="@dimen/size_txt_14" />
                </RelativeLayout>


                <!--display username section-->
                <RelativeLayout
                    android:id="@+id/relLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relLayout1"
                    android:layout_marginTop="@dimen/margin_5">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/UsernameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/Username"
                        android:textSize="@dimen/size_txt_14" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:inputType="text"
                        android:layout_below="@id/UsernameText"
                        android:layout_marginTop="3dp"
                        android:hint="@string/Username"
                        android:textSize="14sp" />
                </RelativeLayout>

                <!--display website section-->
                <RelativeLayout
                    android:id="@+id/relLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relLayout2"
                    android:layout_marginTop="@dimen/margin_5">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/webSiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/Website"
                        android:textSize="@dimen/size_txt_14" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edt_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/webSiteText"
                        android:layout_marginTop="@dimen/margin_3"
                        android:inputType="textWebEditText"
                        android:hint="@string/Website"
                        android:textSize="@dimen/size_txt_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relLayout3"
                    android:layout_marginTop="@dimen/margin_5">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/bioText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Bio"
                        android:textSize="@dimen/size_txt_14" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edt_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/bioText"
                        android:layout_marginTop="@dimen/margin_3"
                        android:hint="@string/Bio"
                        android:textSize="@dimen/size_txt_14" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/grey_border_top"
                android:padding="@dimen/padding_20">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Try_Instagram_Tools"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_txt_16" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout5"
                android:background="@drawable/grey_border_top"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingTop="@dimen/padding_30">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Private_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_txt_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textPrivate"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/Email_address"
                    android:textSize="@dimen/size_txt_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textEmail"
                    android:layout_marginTop="@dimen/margin_2"
                    android:hint="@string/Email_address"
                    android:textSize="@dimen/size_txt_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout6"
                android:background="@drawable/grey_border_top"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingTop="@dimen/padding_30">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Phone_number"
                    android:textSize="@dimen/size_txt_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textPhone"
                    android:layout_marginTop="@dimen/margin_2"
                    android:hint="@string/Phone_number"
                    android:textSize="@dimen/size_txt_14" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayout7"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/grey_border_top"

                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:paddingTop="@dimen/padding_30">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Gender"
                    android:textSize="@dimen/size_txt_14" />

                <Spinner
                    android:id="@+id/spi_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gender" />


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</merge>